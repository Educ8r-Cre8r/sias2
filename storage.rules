rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Public read for gallery assets served from Storage
    match /images/{allPaths=**} { allow read; }
    match /pdfs/{allPaths=**} { allow read; }
    match /5e_lessons/{allPaths=**} { allow read; }

    // Allow uploads to the /uploads/ directory
    // Files must be images and under 2MB
    match /uploads/{category}/{filename} {
      allow write: if request.auth != null
                   && request.resource.size < 2 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*')
                   && category in ['life-science', 'earth-space-science', 'physical-science'];

      allow read: if request.auth != null;
    }

    // Processed images can be read by authenticated users
    match /processed/{allPaths=**} {
      allow read: if request.auth != null;
    }
  }
}
